---
const personalImageAlt = "Miguel Ángel"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-24 object-cover object-[50%_30%]"
      src="/daviddev.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/david-suarez-cortes-9262a9313/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy David
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-sky-300 [&>strong]:text-sky-600 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong>Ingeniero de Sistemas</strong> con 2 años de experiencia, especializado en el desarrollo de aplicaciones web. Radicado en Pamplona, Colombia, <strong>comprometido con la innovación</strong> y la calidad en soluciones digitales.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:dsuarezz.cortes@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/david-suarez-cortes-9262a9313/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
